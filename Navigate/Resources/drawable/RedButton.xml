<?xml version="1.0" encoding="utf-8" ?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
  <item android:state_pressed="true" >
    <shape android:shape="rectangle">
      <solid
          android:color="@color/Failure"
            />
      <stroke
          android:width="1dp"
          android:color="@color/Failure"
            />
      <corners
          android:radius="1dp"
            />
      <marging
        android:left="4dp"
        android:top="4dp"
        android:right="4dp"
        android:bottom="4dp">
      </marging>
      <padding
          android:left="10dp"
          android:top="10dp"
          android:right="10dp"
          android:bottom="10dp"
            />
    </shape>
  </item>
  <item android:state_enabled="false" >
    <shape android:shape="rectangle">
      <gradient
          android:startColor="@color/FailureGradientStart"
          android:endColor="@color/Failure"
          android:angle="270"
            />
      <stroke
          android:width="1dp"
          android:color="#8E0607"
            />
      <corners
          android:radius="1dp"
            />
      <marging
        android:left="4dp"
        android:top="4dp"
        android:right="4dp"
        android:bottom="4dp" >
      </marging>
      <padding
          android:left="10dp"
          android:top="10dp"
          android:right="10dp"
          android:bottom="10dp"
            />
    </shape>
  </item>
  <!--Default-->
  <item>
    <shape android:shape="rectangle">
      <gradient
          android:startColor="@color/FailureGradientStart"
          android:endColor="@color/Failure"
          android:angle="270"
            />
      <stroke
          android:width="2dp"
          android:color="@color/FailureGradientStart"
            />
      <corners
          android:radius="1dp"
            />
      <padding
          android:left="10dp"
          android:top="10dp"
          android:right="10dp"
          android:bottom="10dp"
            />
    </shape>
  </item>
</selector>